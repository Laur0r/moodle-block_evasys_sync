{{!
@template block_evasys_sync/block
Example context (json):
{
    "href": "http://172.17.0.1/moodle/blocks/evasys_sync/invite.php",
    "sesskey": "123",
    "courseid" : "4",
    "courses": [],
    "showcontrols": 0,
    "direct": 1
}
}}

<form action="{{href}}" method="post" id="evasys_block_form">
    <input type="hidden" name="sesskey" value="{{sesskey}}">
    <input type="hidden" name="courseid" value="{{courseid}}">
    {{#startdisabled}}<input id="only_end" type="hidden" name="only_end" value="true">{{/startdisabled}}
    {{#courses}}
        {{#.}}
            <div title="Kennung: {{evasyscourseid}}&#13;Evasysinterne ID: {{technicalid}}"><span class="emphasize">{{# str}}evacourseid, block_evasys_sync{{/str}}</span> {{evasyscoursetitle}}</div>
            <div><span class="emphasize">{{# str}}countparticipants, block_evasys_sync{{/str}}</span> {{c_participants}}</div>
            <div class="emphasize">{{# str}}surveys, block_evasys_sync{{/str}}</div>
            {{#surveys}}
                <ol>
                    {{#.}}
                        <li>
                            <span class="emphasize">{{formName}}</span><br/>
                            <span class="emphasize">{{# str}}surveystatus, block_evasys_sync{{/str}}</span> {{surveystatus}} <br/>
                            <span class="emphasize">{{# str}}finishedforms, block_evasys_sync{{/str}}</span> {{amountOfCompleteForms}} <br/>
                        </li>
                    {{/.}}
                </ol>
            {{/surveys}}
        {{/.}}
    {{/courses}}
{{#warning}}<span style="color: red; ">{{# str}}warning_inconsistent_states, block_evasys_sync{{/str}}</span>{{/warning}}
    {{#showcontrols}}
        <fieldset>
        {{#startoption}}<input type="checkbox" id="reactivate"> {{# str}}reactivate_invite, block_evasys_sync{{/str}} <br/>{{/startoption}}
            Evaluieren von:
            {{#direct}}
                &nbsp;&nbsp; <input type="checkbox" name="direct_invite" value="true" {{startdisabled}}> {{# str}}direct_invite_checkbox, block_evasys_sync{{/str}}
            {{/direct}}
            <br />
            {{< block_evasys_sync/datetimepicker}}
                {{$id}}start{{/id}}
                {{$disabled}}{{startdisabled}}{{/disabled}}
            {{/block_evasys_sync/datetimepicker}}
            {{#direct}}
            {{/direct}}
        <br/>bis<br/>
            {{< block_evasys_sync/datetimepicker}}
                {{$id}}end{{/id}}
                {{$disabled}}{{enddisabled}}{{/disabled}}
            {{/block_evasys_sync/datetimepicker}}
        </fieldset>
        {{^direct}}
            <input type="submit" value="{{# str}}invitestudents, block_evasys_sync{{/str}}"/>
        {{/direct}}
        {{#direct}}
            <input type="submit" value="{{# str}}direct_invite, block_evasys_sync{{/str}}"/>
        {{/direct}}
    {{/showcontrols}}
</form>
{{#coursemappingenabled}}
    {{> block_evasys_sync/coursemapping}}
{{/coursemappingenabled}}