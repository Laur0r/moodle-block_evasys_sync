<form action="{{href}}" method="post" id="evasys_block_form">
    <input type="hidden" name="sesskey" value="{{sesskey}}">
    <input type="hidden" name="courseid" value="{{courseid}}">
    {{#courses}}
        {{#.}}
            <div><span class="emphasize">{{# str}}evacourseid, block_evasys_sync{{/str}}</span> {{evasyscourseid}}</div>
            <div><span class="emphasize">{{# str}}countparticipants, block_evasys_sync{{/str}}</span> {{c_participants}}</div>
            <div class="emphasize">{{# str}}surveys, block_evasys_sync{{/str}}</div>
            {{#surveys}}
                <ol>
                    {{#.}}
                        <li>
                            <span class="emphasize">{{formName}}</span><br/>
                            <span class="emphasize">{{# str}}surveystatus, block_evasys_sync{{/str}}</span> {{surveystatus}} <br/>
                            <span class="emphasize">{{# str}}finishedforms, block_evasys_sync{{/str}}</span> {{amountOfCompleteForms}} <br/>
                        </li>
                    {{/.}}
                </ol>
            {{/surveys}}
        {{/.}}
    {{/courses}}
    {{#showcontrols}}
        <fieldset>
            <label for="startDate">{{# str}}begin, block_evasys_sync{{/str}}</label>
            <input type="date" name="startDate" min="{{beginmin}}" value="{{beginpre}}" {{readonlybegin}}/><br/>
            <label for="endDate">{{# str}}end, block_evasys_sync{{/str}}</label>
            <input type="date" name="endDate" min="{{endmin}}" value="{{endpre}}" {{readonlyend}}/><br/>
        </fieldset>
    {{/showcontrols}}
    {{#direct}}
        <input type="submit" value="{{# str}}invitestudents, block_evasys_sync{{/str}}"/>
    {{/direct}}
    {{^direct}}
        <input type="submit" value="{{# str}}direct_invite, block_evasys_sync{{/str}}"/>
    {{/direct}}
</form>
<form action="../blocks/evasys_sync/addcourse.php">
    <input type="hidden" name="sesskey" value="{{sesskey}}">
    <input type="hidden" name="id" value="{{courseid}}">
    <input type="submit" value="{{# str}}change_mapping, block_evasys_sync{{/str}}">
</form>